<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbg"
    tools:context=".activities.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/editTextViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundtextlabel"
            android:text="email"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editTextViewLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundtextlabel"
            android:text="login"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editTextViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundtextlabel"
            android:text="password"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editTextViewPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgroundtextlabel"
            android:text="confirm password"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editTextViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgroundtextlabel"
            android:text="name"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editTextViewLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgroundtextlabel"
            android:text="lastname"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Already have an Account? \nClick to Login"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            tools:text="Already have an Account? \nClick to Login" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btnsignupandregister"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textColor="@color/display"
            android:textAlignment="center"
            tools:text="Sign Up" />


    </LinearLayout>

</LinearLayout>